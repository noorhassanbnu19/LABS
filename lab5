#include <iostream>
using namespace std;

int main() {
    char ch;
    int rows;

    // Ask the user for the character and number of rows
    cout << "Enter a character: ";
    cin >> ch;

    cout << "Enter number of rows: ";
    cin >> rows;

    // Outer loop for each row
    for (int i = 1; i <= rows; i++) {
        // Print spaces before the characters (for pyramid shape)
        for (int space = 1; space <= rows - i; space++) {
            cout << " ";
        }

        // Print characters with space between them for better shape
        for (int j = 1; j <= i; j++) {
            cout << ch << " ";
        }

        // Move to the next line
        cout << endl;
    }

    return 0;
}
