
#include <iostream>
using namespace std;

// 1. Function to check Even or Odd
void checkEvenOdd(int num) {
    if (num % 2 == 0)
        cout << num << " is Even\n";
    else
        cout << num << " is Odd\n";
}

// 2. Function to count digits
int countDigits(int num) {
    int count = 0;
    if (num == 0)
        return 1;

    while (num != 0) {
        num = num / 10;
        count++;
    }
    return count;
}

// 3. Function to sum digits
int sumDigits(int num) {
    int sum = 0;
    while (num != 0) {
        sum += num % 10;
        num = num / 10;
    }
    return sum;
}

// 4. Function to check Prime
bool isPrime(int num) {
    if (num <= 1)
        return false;

    for (int i = 2; i <= num / 2; i++) {
        if (num % i == 0)
            return false;
    }
    return true;
}

int main() {
    int num;

    cout << "Enter a number: ";
    cin >> num;

    // Calling all functions
    checkEvenOdd(num);

    cout << "Total digits: " << countDigits(num) << endl;

    cout << "Sum of digits: " << sumDigits(num) << endl;

    if (isPrime(num))
        cout << num << " is a Prime number";
    else
        cout << num << " is NOT a Prime number";

    return 0;
}
